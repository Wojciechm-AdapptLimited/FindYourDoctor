@page "/manage-accounts"

@using Microsoft.AspNetCore.Identity
@using FindYourDoctor.Data.Domain

@inject RoleManager<Account> RoleManager
@inject IDialogService DialogService

<MudTable Items="_accounts" Hover="true" FixedHeader="true" SortLabel="Sort by" Height="700px" Filter="new Func<AccountTableObject, bool>(FilterSpecializations)">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Manage Account Types</MudText>
        <MudIconButton Icon="@Icons.Material.Filled.Add" OnClick="AddAccount"/>
        <MudSpacer />
        <MudTextField @bind-Value="_searchString" Immediate="true" Placeholder="Search" Adornment="Adornment.Start" 
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0" />
    </ToolBarContent>
    <ColGroup>
        <col/>
        <col/>
        <col style="width: 15%"/>
    </ColGroup>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortBy="new Func<AccountTableObject,object>(x => x.Id)" Enabled="true">Id</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<AccountTableObject,object>(x => x.Name)">Name</MudTableSortLabel></MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.Id</MudTd>
        <MudTd>@context.Name</MudTd>
        <MudTd>
            <MudIconButton Icon="@Icons.Material.Filled.Edit" OnClick="() => EditAccount(context.Id)"/>
            <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="() => DeleteAccount(context.Id)"/>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>